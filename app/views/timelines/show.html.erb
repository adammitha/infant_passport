						<th>Event</th>
						<th>Age</th>
						<th class="col-sm-4">Date</th>
					  </tr>
					</thead>
					<tbody>
					  <%= raw(render_feeding_milestone("fed1.1","Begin breastfeeding or infant formula","0-6 Months")) %>
						<%= raw(render_feeding_milestone("fed1.2","Begin solid food","6-9 Months")) %>
						<%= raw(render_feeding_milestone("fed1.3","Transition to cow's milk","9-12 Months")) %>
					</tbody>
				</table>
			  </div>
				<br />
