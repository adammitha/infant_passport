<% provide(:title, "Timeline") %>
<% provide(:extra_body_shit, raw(" data-spy='scroll' data-target='#myScrollspy' data-offset='0'")) %>
<div hidden id="birthdate" title="<%= @date_of_birth.strftime('%m/%d/%Y') %>"></div>
<div hidden id="milestones" title="<%= @timeline.milestones.map { |milestone| milestone.milestone_id } %>"></div>
	  <div class="row">
		<nav class="col-sm-3" id="myScrollspy">
		  <ul class="nav nav-pills nav-stacked" style="padding-top:80px;">
			<h2><%= @timeline.child.first_name %>'s Timeline</h2>
			<li class="active"><a href="#section1">Vaccinations</a></li>
			<li><a href="#section2">Feeding and Nutrition</a></li>
			<li><a href="#section3">Growth and Development</a></li>
			<%= form_tag("/timelines/#{params[:id]}", method: "put", id: "saveForm") do %>
				<%= hidden_field_tag(:formData, "test2") %>
				<%= submit_tag("Save Changes", class: "btn btn-default disabled", id: "saveChangesButton", onclick: "updateFormData()") %>
			<% end %>
		  </ul>
		</nav>
		<div class="col-sm-9">
			<div class="scrollspy-section" id="section1">
				<h1>Vaccination Schedule</h1>
				<table class="table">
					<thead>
					  <tr>
						<th>Vaccine</th>
						<th>Age</th>
						<th class="col-sm-5">Date</th>
					  </tr>
					</thead>
					<tbody id="vaccineBody">
					  <%= render @vaccinations %>
					  <tr>
						<td colspan="3">
							<button type="button" class="btn btn-info" onclick="addVacc(this)">Add Vaccine</button>
						</td>
					  </tr>
					</tbody>
				</table>
			  </div>
				<br />
			  <div class="scrollspy-section" id="section2">
				<h1>Feeding and Nutrition</h1>
				<h3>Allergies</h3>
				<table class="table">
					<thead>
					  <tr>
						<th>Allergen</th>
						<th class="col-sm-6">Severity</th>
					  </tr>
					</thead>
					<tbody id="allergyBody">
					  <%= render @allergies %>
					  <tr>
						<td colspan="3">
							<button type="button" class="btn btn-info" onclick="addAllergy(this)">Add Allergy</button>
						</td>
					  </tr>
					</tbody>
				</table>
				<h3>Year 1</h3>
