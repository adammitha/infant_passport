<div class="col-lg-3 col-md-6">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <div class="row">
        <div class="col-xs-3">
          <i class="fa fa-<%= child.gender ? 'venus' : 'mars' %> fa-5x"></i>
        </div>
        <div class="col-xs-9 text-right">
          <div>
            <h1><%= child.first_name %></h1>
          </div>
          <div><%= child.date_of_birth.strftime('%B %e, %Y') %></div>
          <div><%= age_in_months(child) %> months old</div>
        </div>
      </div>
    </div>
    <%= link_to raw('<div class="panel-footer">
      <span class="pull-left">View Timeline</span>
      <span class="pull-right"><i class="fa   fa-arrow-circle-right"></i></span>
      <div class="clearfix"></div>
    </div>'), child.timeline %>
	<%= link_to raw('<div class="panel-footer">
		<span class="pull-left">View Chart</span>
		<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
		<div class="clearfix"></div>
	</div>'), child.chart %>
  </div>
</div>
